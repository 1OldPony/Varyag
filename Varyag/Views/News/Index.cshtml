@model IEnumerable<Varyag.Models.News>

@{
    ViewData["Title"] = "Новости";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Новости</h1>

<p>
    <a asp-action="Create">Создать новость</a>
</p>

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="partNews" style="margin:1vw;justify-content:flex-start">
        <div id="shortStory">
            <div class="partNewsElementViewShort" style="background-image:url(@Model.ElementAt(i).ShortFotoPreview);background-position-x:@Model.ElementAt(i).ShortImgX;background-position-y:@Model.ElementAt(i).ShortImgY;background-size:@Model.ElementAt(i).ShortImgScale;">
                <div class="annotation">
                    <div class="annotationText">
                        @Html.Raw(Model.ElementAt(i).ShortStory)
                    </div>
                </div>
            </div>
        </div>
        <div id="middleStory">
            <div class="partNewsElementViewMiddle" style="display:none;background-image:url(@Model.ElementAt(i).MiddleFotoPreview);background-position-x:@Model.ElementAt(i).MiddleImgX;background-position-y:@Model.ElementAt(i).MiddleImgY;background-size:@Model.ElementAt(i).MiddleImgScale;">
                <div class="annotation">
                    <div class="annotationText">
                        @Html.Raw(Model.ElementAt(i).MiddleStory)
                    </div>
                </div>
            </div>
        </div>
        <div id="wideStory">
            <div class="partNewsElementViewWide" style="display:none;background-image:url(@Model.ElementAt(i).WideFotoPreview);background-position-x:@Model.ElementAt(i).WideImgX;background-position-y:@Model.ElementAt(i).WideImgY;background-size:@Model.ElementAt(i).WideImgScale;">
                <div class="annotation">
                    <div class="annotationText">
                        @Html.Raw(Model.ElementAt(i).WideStory)
                    </div>
                </div>
            </div>
        </div>
        <div style="margin:1vw">
            <h2>@Model.ElementAt(i).Header</h2>
            <div>@Html.Raw(Model.ElementAt(i).MainStory)</div>
        </div>
    </div>
    <div style="margin:1vw">
        <input type="button" name="showHideButton" value="Развернутый вид" id="@i" />
        <div class="MyContainer" id="@i" style="display:none">
            <h2>@Model.ElementAt(i).Header</h2>
            <div>@Html.Raw(Model.ElementAt(i).MainStory)</div>
            <div class="fotorama" data-nav="thumbs" data-width="100%" data-fit="contain" data-allowfullscreen="native">
                @await Component.InvokeAsync("Fotorama", new { newsId = Model.ElementAt(i).NewsId })
            </div>
        </div>
        <p>
            <a asp-action="Edit" asp-route-id="@Model.ElementAt(i).NewsId">Редактировать проект</a> |
            <a asp-action="Delete" asp-route-id="@Model.ElementAt(i).NewsId">Удалить проект</a>
        </p>
    </div>
    <div class="myBorder"></div>
}
<div style="margin:1vw">
    @for (int i = 1; i <= ViewBag.Pages; i++)
    {
        <a asp-action="Index" asp-route-page="@i"><span style="color:red;text-decoration:dotted">@i </span></a>
    }
</div>
