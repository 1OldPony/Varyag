@model IEnumerable<Varyag.Models.Project>

<div class="projects">
    @foreach (var item in Model)
    {
    <a class="projectListItem" asp-action="ProjectDetails" asp-controller="Catalog" asp-route-id="@item.ProjectID">
        <div class="singleProject">
            <div class="projectImage"><img src="@Url.Action("ProjectImageRender", "Projects", new { id = item.ProjectID, fot = "sheme"})" alt="@item.Name" title="@item.Name" /></div>
            <div class="projectImage"><img src="@Url.Action("ProjectImageRender", "Projects", new { id = item.ProjectID, fot = "main"})" alt="@item.Name" title="@item.Name" /></div>
            <div class="TTH">
                <div>
                    <table>
                        <tr>
                            <td colspan="3" style="text-align:center">@item.Name</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Length)</td>
                            <td class="table-space"></td>
                            <td class="value">@item.Length</td>
                        </tr>
                        @if (@item.Volume != null)
                        {
                            <tr>
                                <td class="characteristic">@Html.DisplayNameFor(model => model.Volume)</td>
                                <td class="table-space"></td>
                                <td class="value">@item.Volume</td>
                            </tr>
                        }
                        @if (@item.Mass != null)
                        {
                            <tr>
                                <td class="characteristic">@Html.DisplayNameFor(model => model.Mass)</td>
                                <td class="table-space"></td>
                                <td class="value">@item.Mass</td>
                            </tr>
                        }
                        <tr>
                            <td class="characteristic">@Html.DisplayNameFor(model => model.PassengerCap)</td>
                            <td class="table-space"></td>
                            <td class="value">@item.PassengerCap</td>
                        </tr>
                        <tr>
                            <td style="text-align:left; padding-top:20px" colspan="3">@Html.DisplayNameFor(model => model.Price) : @item.Price</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </a>
    }
</div>