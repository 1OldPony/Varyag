                <div class="annotation">
                    <div class="annotationText" style="font-size:1.2rem">
                        @Html.Raw(Model.ElementAt(0).MiddleStory)
                    </div>
                </div>
            </div>
        </a>
        <a href="../../../o-nas/stati/@Model.ElementAt(1).ArticleRoute">
            <div class="partNewsElement" style="background-image:url(@Model.ElementAt(1).MiddleFotoPreview);background-position-x:@Model.ElementAt(1).MiddleImgX;background-position-y:@Model.ElementAt(1).MiddleImgY;background-size:@Model.ElementAt(1).MiddleImgScale auto;background-repeat:no-repeat;margin-bottom:3px;width:100%;">
                <div class="annotation">
                    <div class="annotationText">
                        @Html.Raw(Model.ElementAt(1).MiddleStory)
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="partNews" id="wideStory" style="width:100%">
        <a href="../../../o-nas/stati/@Model.ElementAt(0).ArticleRoute">
            <div id="mainPage" class="partNewsElement" style="background-image:url(@Model.ElementAt(0).WideFotoPreview);background-position-x:@Model.ElementAt(0).WideImgX;background-position-y:@Model.ElementAt(0).WideImgY;background-size:@Model.ElementAt(0).WideImgScale auto;background-repeat:no-repeat;margin-bottom:3px;width:100%;">
                <div class="annotation">
                    <div class="annotationText">
                        @Html.Raw(Model.ElementAt(0).WideStory)
                    </div>
                </div>
            </div>
        </a>
        <a href="../../../o-nas/stati/@Model.ElementAt(1).ArticleRoute">
            <div id="mainPage" class="partNewsElement" style="background-image:url(@Model.ElementAt(1).WideFotoPreview);background-position-x:@Model.ElementAt(1).WideImgX;background-position-y:@Model.ElementAt(1).WideImgY;background-size:@Model.ElementAt(1).WideImgScale auto;background-repeat:no-repeat;margin-bottom:3px;width:100%;">
