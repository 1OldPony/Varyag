@model List<Varyag.Models.NewsViewModel>

<div style="display:flex">
    <div style="display: flex;flex-direction: column;align-items: center;position:relative;background-color:white;padding:0 10px 10px 10px;margin:10px 5px 0 10px;width:50%;justify-content:space-between;border-radius:10px;">
        <a asp-action="AllNews" style="height:100%;">
            <div class="headerAbout" style="font-size:1.5rem;margin:0 20px 0 20px;justify-content:space-between;height:100%;">
                <div class="borderAbout"></div>
                <div>Узнать о деятельности нашего предприятия и жизни построенных нами кораблей можно в разделе новостей</div>
                <div class="borderAbout"></div>
            </div>
        </a>
        <div class="partNews" style="width:100%">
            <a asp-action="NewsDetails" asp-route-id="@Model.ElementAt(0).NewsId">
                <div class="partNewsElement" style="background-image:url(@Model.ElementAt(0).ShortFotoPreview);background-position-x:@Model.ElementAt(0).ShortImgX;background-position-y:@Model.ElementAt(0).ShortImgY;background-size:@Model.ElementAt(0).ShortImgScale auto;background-repeat:no-repeat;margin-bottom:3px;height:25vh;width:50%;">
                    <div class="annotation">
                        <div class="annotationText" style="font-size:1.2rem">
                            @Html.Raw(Model.ElementAt(0).ShortStory)
                        </div>
                    </div>
                </div>
            </a>
            <div style="width:10px;height:10px"></div>
            <a asp-action="NewsDetails" asp-route-id="@Model.ElementAt(1).NewsId">
                <div class="partNewsElement" style="background-image:url(@Model.ElementAt(1).ShortFotoPreview);background-position-x:@Model.ElementAt(1).ShortImgX;background-position-y:@Model.ElementAt(1).ShortImgY;background-size:@Model.ElementAt(1).ShortImgScale auto;background-repeat:no-repeat;margin-bottom:3px;height:25vh;width:50%;">
            <div class="annotation">
                <div class="annotationText" style="font-size:1.2rem">
                    @Html.Raw(Model.ElementAt(1).ShortStory)
                </div>
            </div>
        </div>
            </a>
        </div>
    </div>
    <div style="display: flex;flex-direction: column;align-items:center;position:relative;background-color:white;padding:0 10px 10px 10px;margin:10px 10px 0 5px;width:50%;justify-content:space-between;border-radius:10px;">
        <a asp-action="AllNews" style="height:100%;">
            <div class="headerAbout" style="font-size:1.5rem;margin:0 20px 0 20px;justify-content:space-between;height:100%;">
                <div class="borderAbout"></div>
                <div>Отдельные статьи о наших заказах для музеев и киностудий</div>
                <div class="borderAbout"></div>
            </div>
        </a>
        <div class="partNews" style="width:100%">
            <a asp-action="NewsDetails" asp-route-id="@Model.ElementAt(0).NewsId">
                <div class="partNewsElement" style="background-image:url(@Model.ElementAt(0).ShortFotoPreview);background-position-x:@Model.ElementAt(0).ShortImgX;background-position-y:@Model.ElementAt(0).ShortImgY;background-size:@Model.ElementAt(0).ShortImgScale auto;background-repeat:no-repeat;margin-bottom:3px;height:25vh;width:50%;">
            <div class="annotation">
                <div class="annotationText" style="font-size:1.2rem">
                    @Html.Raw(Model.ElementAt(0).ShortStory)
                </div>
            </div>
        </div>
            </a>
            <div style="width:10px;height:10px"></div>
            <a asp-action="NewsDetails" asp-route-id="@Model.ElementAt(1).NewsId">
                <div class="partNewsElement" style="background-image:url(@Model.ElementAt(1).ShortFotoPreview);background-position-x:@Model.ElementAt(1).ShortImgX;background-position-y:@Model.ElementAt(1).ShortImgY;background-size:@Model.ElementAt(1).ShortImgScale auto;background-repeat:no-repeat;margin-bottom:3px;height:25vh;width:50%;">
            <div class="annotation">
                <div class="annotationText" style="font-size:1.2rem">
                    @Html.Raw(Model.ElementAt(1).ShortStory)
                </div>
            </div>
        </div>
            </a>
        </div>
    </div>
</div>





