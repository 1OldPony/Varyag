@model Varyag.Models.News
@{
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
<div class="MyContainer">
    <div class="path">
        <a asp-action="Index" asp-controller="About">Главная</a> > <a href="../../../o-nas">О нас</a> > <a>@Model.Header</a>
    </div>

    <div class="contentBlock">
        <div id="blackScreen" onclick="navigationButton()" class="blackScreen"></div>
        <div class="leftMenu" id="newAndArticles">
            <nav>
                <ul class="leftNavMenu" style="justify-content:flex-start;padding-bottom:79px">
                    <li id="catalogWord">
                        <div class="leftNavLine"><a href="../../../katalog" class="navLineHeader">Каталог</a></div>
                    </li>
                    <li>
                        <div class="leftNavLine"><a href="../../../o-nas" class="navLineHeader">О верфи "Варяг"</a></div>
                    </li>
                    <li>
                        <div class="leftNavLine"><div id="articlesOpen" class="leftNavOpenCurrent">+</div><div id="articlesClose" class="leftNavCloseCurrent">-</div><a href="../../../o-nas/stati?actualNews=@ViewBag.actualNews&recentNews=@ViewBag.recentNews&oldNews=@ViewBag.oldNews" class="leftNavLine"><div>Статьи</div></a></div>
                        <ul id="articles-sub" class="leftSubNavOpenCurrent">
                            <li class="leftSubCategory">
                                <h2><a href="../../../o-nas/stati?actualNews=@ViewBag.actualNews&recentNews=@ViewBag.recentNews&oldNews=@ViewBag.oldNews&type=Заказы для музеев" id="museums">Заказы для музеев</a></h2>
                            </li>
                            <li class="leftSubCategory">
                                <h2><a href="../../../o-nas/stati?actualNews=@ViewBag.actualNews&recentNews=@ViewBag.recentNews&oldNews=@ViewBag.oldNews&type=Заказы для кино" id="movies">Заказы для кино</a></h2>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <div id="themeNewsNav" class="leftNavLine" style="margin-top:46px"><div id="themeNewsOpen" class="leftNavOpenCurrent">+</div><div id="themeNewsClose" class="leftNavCloseCurrent">-</div><a href="../../../o-nas/nashi-novosti" style="color: #e81010">Наши новости</a></div>
                        <ul id="themeNews-sub" class="leftSubNavOpenCurrent">
                            @if (ViewBag.newsType == "smi")
                            {
                                <li class="leftSubCategory">
                                    <h2><a href="../../../o-nas/nashi-novosti?newsType=smi" style="color: #e81010" id="smiNav">СМИ о нас</a></h2>
                                </li>
                            }
                            else
                            {
                                <li class="leftSubCategory">
                                    <h2><a href="../../../o-nas/nashi-novosti?newsType=smi" id="smiNav">СМИ о нас</a></h2>
                                </li>
                            }
                            @if (ViewBag.newsType == "life")
                            {
                                <li class="leftSubCategory">
                                    <h2><a href="../../../o-nas/nashi-novosti?newsType=life" style="color: #e81010" id="lifeNav">Жизнь наших судов</a></h2>
                                </li>
                            }
                            else
                            {
                                <li class="leftSubCategory">
                                    <h2><a href="../../../o-nas/nashi-novosti?newsType=life" id="lifeNav">Жизнь наших судов</a></h2>
                                </li>
                            }
                            @if (ViewBag.newsType == "newShips")
                            {
                                <li class="leftSubCategory">
                                    <h2><a href="../../../o-nas/nashi-novosti?newsType=newShips" style="color: #e81010" id="newShipsNav">Новости верфи</a></h2>
                                </li>
                            }
                            else
                            {
                                <li class="leftSubCategory">
                                    <h2><a href="../../../o-nas/nashi-novosti?newsType=newShips" id="newShipsNav">Новости верфи</a></h2>
                                </li>
                            }
                        </ul>
                    </li>
                    <li>
                        <div id="allNewsNav" class="leftNavLine" style="margin-top:69px"><div id="allNewsOpen" class="leftNavOpenCurrent">+</div><div id="allNewsClose" class="leftNavCloseCurrent">-</div><a href="../../../o-nas/nashi-novosti?newsType=byType">Архив</a></div>
                        <ul id="allNews-Sub" class="leftSubNavOpenCurrent">
                            <li class="leftSubCategory">
                                <a href="../../../o-nas/nashi-novosti?part=new&newsType=byType">@ViewBag.actualNews</a>
                            </li>
                            <li class="leftSubCategory">
                                <a href="../../../o-nas/nashi-novosti?part=recent&newsType=byType">@ViewBag.recentNews</a>
                            </li>
                            <li class="leftSubCategory">
                                <a href="../../../o-nas/nashi-novosti?part=old&newsType=byType">@ViewBag.oldNews</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <partial name="ContactsLeft" />
        </div>
        <div class="projectsHalf" id="newsDetailsProjectsHalf">
            <div class="topCatalogLine" id="newsDetails">
                <h1 class="categorysLineItemHeader">@Model.Header</h1>
                <div class="newsDetailsStory">@Html.Raw(Model.MainStory)</div>
                @if (Model.PathToGallery != null)
                {
                    <div class="fotorama" style="width:95%;" data-nav="thumbs" data-width="100%" data-fit="scaledown" data-allowfullscreen="native">
                        @await Component.InvokeAsync("Fotorama", new { newsId = Model.NewsId })
                    </div>
                }
            </div>
            @if (LittleHelper.NullCounter(Model.PathToVideo1, Model.PathToVideo2, Model.PathToVideo3) < 2)
            {
                <div class="newsNav">
                    @if (Model.PathToVideo1 != null)
                    {
                        <div class="nav-element-minor-choosen" style="cursor:pointer" id="videoOne">
                            <div class="nav-element-inside">
                                <p>Сюжет №1</p>
                            </div>
                            <input type="text" value="@Model.PathToVideo1" id="firstVideoUrl" hidden />
                        </div>
                    }
                    @if (Model.PathToVideo2 != null)
                    {
                        @if (Model.PathToVideo1 == null)
                        {
                            <div class="nav-element-minor-choosen" style="cursor:pointer" id="videoTwo">
                                <div class="nav-element-inside">
                                    <p>Сюжет №1</p>
                                </div>
                                <input type="text" value="@Model.PathToVideo2" id="secondVideoUrl" hidden />
                            </div>
                        }
                        else
                        {
                            <div class="nav-element-minor" style="cursor:pointer" id="videoTwo">
                                <div class="nav-element-inside">
                                    <p>Сюжет №2</p>
                                </div>
                                <input type="text" value="@Model.PathToVideo2" id="secondVideoUrl" hidden />
                            </div>
                        }
                        @*<div class="nav-element-minor" style="cursor:pointer" id="videoTwo">
                                <div class="nav-element-inside">
                                    @if (Model.PathToVideo1 == null)
                                    {
                                        <p>Сюжет №1</p>
                                    }
                                    else
                                    {
                                        <p>Сюжет №2</p>
                                    }
                                </div>
                                <input type="text" value="@Model.PathToVideo2" id="secondVideoUrl" hidden />
                            </div>*@
                    }
                    @if (Model.PathToVideo3 != null)
                    {
                        @if (Model.PathToVideo1 == null && Model.PathToVideo2 == null)
                        {
                            <div class="nav-element-minor-choosen" style="cursor:pointer" id="videoThree">
                                <div class="nav-element-inside">
                                    <p>Сюжет №1</p>
                                </div>
                                <input type="text" value="@Model.PathToVideo3" id="thirdVideoUrl" hidden />
                            </div>
                        }
                        @if (Model.PathToVideo2 == null && Model.PathToVideo1 != null)
                        {
                            <div class="nav-element-minor" style="cursor:pointer" id="videoThree">
                                <div class="nav-element-inside">
                                    <p>Сюжет №2</p>
                                </div>
                                <input type="text" value="@Model.PathToVideo3" id="thirdVideoUrl" hidden />
                            </div>
                        }
                        @if (Model.PathToVideo2 != null && Model.PathToVideo1 != null)
                        {
                            <div class="nav-element-minor" style="cursor:pointer" id="videoThree">
                                <div class="nav-element-inside">
                                    <p>Сюжет №3</p>
                                </div>
                                <input type="text" value="@Model.PathToVideo3" id="thirdVideoUrl" hidden />
                            </div>
                        }
                        @*<div class="nav-element-minor" style="cursor:pointer" id="videoThree">
                                <div class="nav-element-inside">
                                    @if (Model.PathToVideo1 == null && Model.PathToVideo2 == null)
                                    {
                                        <p>Сюжет №1</p>
                                    }
                                    @if (Model.PathToVideo2 == null && Model.PathToVideo1 != null)
                                    {
                                        <p>Сюжет №2</p>
                                    }
                                    @if (Model.PathToVideo2 != null && Model.PathToVideo1 != null)
                                    {
                                        <p>Сюжет №3</p>
                                    }
                                </div>
                                <input type="text" value="@Model.PathToVideo3" id="thirdVideoUrl" hidden />
                            </div>*@
                    }
                </div>
            }

            @*На случай если только 1 видео и находится оно в разных ячейках*@

            @if (Model.PathToVideo1 != null && Model.PathToVideo2 == null && Model.PathToVideo3 == null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo1" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
            @if (Model.PathToVideo1 == null && Model.PathToVideo2 != null && Model.PathToVideo3 == null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo2" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
            @if (Model.PathToVideo1 == null && Model.PathToVideo2 == null && Model.PathToVideo3 != null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo3" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
            @if (Model.PathToVideo1 != null && Model.PathToVideo2 != null && Model.PathToVideo3 == null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo1" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
            @if (Model.PathToVideo1 != null && Model.PathToVideo2 == null && Model.PathToVideo3 != null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo1" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
            @if (Model.PathToVideo1 == null && Model.PathToVideo2 != null && Model.PathToVideo3 != null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo2" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
            @if (Model.PathToVideo1 != null && Model.PathToVideo2 != null && Model.PathToVideo3 != null)
            {
                <div class="newsVideoPlayer" id="videoPlayer">
                    <iframe src="@Model.PathToVideo1" class="iframeForVideo" frameborder="0" id="firstVideo" allowfullscreen></iframe>
                </div>
            }
        </div>
    </div>
</div>






