                                    </li>
                                }
                                else
                                {
                                    <li class="leftSubCategory">
                                        <a asp-action="AllNews" asp-route-part="new" asp-route-newsType="byType">@ViewBag.actualNews</a>
                                    </li>
                                }
                                @if (ViewBag.part == "recent")
                                {
                                    <li class="leftSubCategory">
                                        <a asp-action="AllNews" asp-route-part="recent" asp-route-newsType="byType" style="color:red">@ViewBag.recentNews</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="leftSubCategory">
                                        <a asp-action="AllNews" asp-route-part="recent" asp-route-newsType="byType">@ViewBag.recentNews</a>
                                    </li>
                                }
                                @if (ViewBag.part == "old")
                                {
                                    <li class="leftSubCategory">
                                        <a asp-action="AllNews" asp-route-part="old" asp-route-newsType="byType" style="color:red">@ViewBag.oldNews</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="leftSubCategory">
                                        <a asp-action="AllNews" asp-route-part="old" asp-route-newsType="byType">@ViewBag.oldNews</a>
                                    </li>
                                }
                            </ul>
