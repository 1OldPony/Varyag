    <input type="text" id="newsTypeSelector" value="@ViewBag.newsType" hidden />
    <div class="contentBlock">
        <div class="leftMenu">
            <nav>
                <ul class="leftNavMenu" style="justify-content:flex-start">
                    <li>
                        <div class="navLineHeader">Все новости</div>
                    </li>
                    <li>
                        <div id="smiNav" class="leftNavLine"><div class="navLineHeader">СМИ о нас</div><div id="smiOpen" class="leftNavOpen">+</div><div id="smiClose" class="leftNavClose">-</div></div>
                        <ul id="smi-Sub" class="leftSubNavOpen">
                            <li class="leftSubCategory">
                                Народные лодки
                            </li>
                            <li class="leftSubCategory">
                                Прогулочные парусные лодки
                            </li>
                            <li class="leftSubCategory">
                                Прогулочные гребные лодки
                            </li>
                        </ul>
                    </li>
                    <li>
                        <div id="lifeNav" class="leftNavLine"><div class="navLineHeader">Жизнь наших судов</div><div id="lifeOpen" class="leftNavOpen">+</div><div id="lifeClose" class="leftNavClose">-</div></div>
                        <ul id="life-Sub" class="leftSubNavOpen">
                            <li class="leftSubCategory">
                                Шлюпки ЯЛ2, ЯЛ4, ЯЛ6
                            </li>
                            <li class="leftSubCategory">
                                Ботики
                            </li>
                            <li class="leftSubCategory">
                                Гребные катера и вельботы
                            </li>
                            <li class="leftSubCategory">
                                Учебные пособия
                            </li>
                        </ul>
                    </li>
                    <li>
                        <div id="newShipsNav" class="leftNavLine"><div class="navLineHeader" style="color:red">Новые корабли</div><div id="newShipsOpen" class="leftNavOpenCurrent">+</div><div id="newShipsClose" class="leftNavCloseCurrent">-</div></div>
                        <ul id="newShips-Sub" class="leftSubNavOpenCurrent">
                            <li class="leftSubCategory">
                                Рабочие/Рыболовные катера
                            </li>
                            <li class="leftSubCategory">
                                Пассажирские катера
                            </li>
                            <li class="leftSubCategory">
                                Каютные катера
                            </li>
                            <li class="leftSubCategory">
                                Мотосейлеры
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <div class="ourContacts">
                <div>НАШИ КОНТАКТЫ</div>
                <div class="contactsLeft">
                    <div class="contactsUnit"><img src="~/images/icons/phone.png" class="contactsIcon" alt="cont" />&nbsp;+7 (814) 273-35-80</div>
                    <a style="cursor:pointer" href="http://www.varyag-onego.ru" target="_blank" class="contactsUnit"><img src="~/images/icons/global_114550x96.png" class="contactsIcon" />&nbsp;www.varyag-onego.ru</a>
                    <div class="contactsUnit"><img src="~/images/icons/email.png" alt="mail" class="contactsIcon" />&nbsp;varyag@onego.ru</div>
                </div>
            </div>
        </div>
        <div class="projectsHalf">
            <div class="topCatalogLine">
                <h1 class="categorysLineTtem" style="margin-block:0;justify-content:flex-start">Наши новости</h1>
            </div>
            <div>
                @for (int i = 0; i < Model.Count(); i++)
                {<a asp-action="NewsDetails" asp-route-id="@Model.ElementAt(i).NewsId">
                        <div class="newsListElement">
                            <div class="partNewsElement" id="allNews" style="grid-area:preview;background-image:url(@Model.ElementAt(i).ShortFotoPreview);background-position-x:@Model.ElementAt(i).ShortImgX;background-position-y:@Model.ElementAt(i).ShortImgY;background-size:@Model.ElementAt(i).ShortImgScale auto;background-repeat:no-repeat;margin-right:1vw">
                                <div class="annotation" id="allNews">
                                    <div class="annotationText" id="allNews">
                                        @Html.Raw(Model.ElementAt(i).ShortStory)
                                    </div>
                                </div>
                            </div>
                            <div class="textPartAllNews">
                                <div id="bottom" class="control">Смотреть...</div>
                                <h2>@Model.ElementAt(i).Header</h2>
                                <div class="newsMainStory">@Html.Raw(Model.ElementAt(i).MainStory)</div>
                            </div>
                        </div>
                    </a>
                    <div class="myBorder"></div>
                }
                @if (ViewBag.Pages != null)
                {
                    <div class="pageView">
                        <a asp-action="AllNews" asp-route-page="@ViewBag.CurrentPage" asp-route-direction="left" asp-route-newsType="@ViewBag.newsType" style="color:red">&#9668;</a>
                        @for (int i = 1; i <= ViewBag.Pages; i++)
                        {
                            if (i == @ViewBag.CurrentPage)
                            {
                                <a asp-action="AllNews" asp-route-page="@i" asp-route-newsType="@ViewBag.newsType"><span style="color:red;margin:3px;font-size:1.4rem">@i </span></a>
                            }
                            else
                            {
                                <a asp-action="AllNews" asp-route-page="@i" asp-route-newsType="@ViewBag.newsType"><span style="color:red;margin:3px;font-size:1.1rem">@i </span></a>
                            }
                        }
                        <a asp-action="AllNews" asp-route-page="@ViewBag.CurrentPage" asp-route-direction="right" asp-route-newsType="@ViewBag.newsType" style="color:red">&#9658;</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
