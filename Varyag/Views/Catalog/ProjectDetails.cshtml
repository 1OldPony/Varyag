@model Varyag.Models.Project
@{
    ViewData["Title"] = "ProjectDetails";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
<div class="path">
    <a>Главная</a> > <a>Каталог</a> > <a>Парусники</a> > <a>@Model.Name</a>
</div>
<div class="projectName"><p>@Model.Name</p></div>
<div class="details-top">
    <div class="sheme">
        <div class="fotorama" data-allowfullscreen="native">
            <img src="@Url.Action("ProjectImageRender", "Projects", new { id = Model.ProjectID, fot = "shemeFull"})" />
        </div>
    </div>
    <div class="TTH-details">
        <table>
            <tr>
                <td colspan="3"><h4>Характеристики</h4></td>
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.Length)</td>
                <td class="value">@Model.Length&nbsp;м.</td>
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.Windth)</td>
                <td class="value">@Model.Windth&nbsp;м.</td>
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.Deep)</td>
                <td class="value">@Model.Deep&nbsp;м.</td>
            </tr>
            @if (@Model.Volume != null)
            {
                <tr>
                    <td class="characteristic">@Html.DisplayNameFor(model => model.Volume)</td>
                    <td class="value">@Model.Volume&nbsp;т.</td>
                </tr>
            }
            @if (@Model.Mass != null)
            {
                <tr>
                    <td class="characteristic">@Html.DisplayNameFor(model => model.Mass)</td>
                    <td class="value">@Model.Mass&nbsp;кг.</td>
                </tr>
            }
            @if (@Model.NumberOfOars != null)
            {
                <tr>
                    <td class="characteristic">@Html.DisplayNameFor(model => model.NumberOfOars)</td>
                    <td class="value">@Model.NumberOfOars&nbsp;шт.</td>
                </tr>
            }
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.EnginePower)</td>
                @if (@Model.EnginePower != null)
                {
                    <td class="value">@Model.EnginePower&nbsp;л.с.</td>
                }
                else
                {
                    <td class="value">-</td>
                }
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.Speed)</td>
                @if (@Model.Speed != null)
                {
                    <td class="value">@Model.Speed&nbsp;узлов</td>
                }
                else
                {
                    <td class="value">-</td>
                }
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.SailArea)</td>
                @if (@Model.SailArea != null)
                {
                    <td class="value">@Model.SailArea&nbsp;м<sup>2</sup></td>
                }
                else
                {
                    <td class="value">-</td>
                }
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.SleepingAreas)</td>
                @if (@Model.SleepingAreas != null)
                {
                    <td class="value">@Model.SleepingAreas&nbsp;шт.</td>
                }
                else
                {
                    <td class="value">-</td>
                }
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.PassengerCap)</td>
                @if (@Model.PassengerCap != null)
                {
                    <td class="value">@Model.PassengerCap&nbsp;чел.</td>
                }
                else
                {
                    <td class="value">-</td>
                }
            </tr>
            <tr>
                <td class="characteristic">@Html.DisplayNameFor(model => model.FuelCap)</td>
                @if (@Model.FuelCap != null)
                {
                    <td class="value">@Model.FuelCap&nbsp;л.</td>
                }
                else
                {
                    <td class="value">-</td>
                }
            </tr>
            @if (@Model.FreshWaterCap != null)
            {
                <tr>
                    <td class="characteristic">@Html.DisplayNameFor(model => model.FreshWaterCap)</td>
                    <td class="value">@Model.FreshWaterCap&nbsp;л.</td>
                </tr>
            }
        </table>
        <div class="catalogItemBottom">@Html.DisplayNameFor(model => model.Price) : @Model.Price&nbsp;тыс.р.</div>
    </div>
    <div class="gallery">
        <div class="fotorama" data-nav="thumbs" data-width="100%" data-fit="contain" data-allowfullscreen="native">
            @await Component.InvokeAsync("Fotorama", new { shipProjectId = Model.ProjectID })
        </div>
    </div>
</div>
<div class="desc-top">Описание:</div>
<div class="description">
    @Html.Raw(Model.Description)
</div>
