@model Varyag.Models.Project
@{
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

@*style="background:url('../images/Гравюра_большое_разрешение_засветленное-с-небом5.jpg') bottom center no-repeat;background-size:cover;"*@

<div class="MyContainer">
    <div class="path">
        <a asp-action="Index" asp-controller="About">Главная</a> > <a href="../../../katalog">Каталог</a> > @if (Model.BoatRow == true || Model.BoatSail == true || Model.BoatTraditional == true)
        {<a href="../../../katalog/lodki">Лодки</a><a style="text-decoration:none"> > </a><a>@Model.Name</a>}
    else if (Model.BoatYal == true || Model.Botik == true || Model.KaterRow == true || Model.MaketStudy == true)
    {<a href="../../../katalog/shlyupki">Шлюпки</a><a style="text-decoration:none"> > </a><a>@Model.Name</a>}
else if (Model.KaterCabin == true || Model.KaterFish == true || Model.KaterPass == true || Model.Motosailer == true)
{<a href="../../../katalog/katera">Катера</a><a style="text-decoration:none"> > </a><a>@Model.Name</a>}
else if (Model.LadyaSail == true || Model.LadyaRow == true || Model.LadyaProject == true)
{<a href="../../../katalog/ladi">Ладьи</a><a style="text-decoration:none"> > </a><a>@Model.Name</a>}
else if (Model.SailboatHistorical == true || Model.SailboatProject == true || Model.SailboatStudy == true || Model.Shvertbot == true || Model.Yacht == true)
{<a href="../../../katalog/parusniki">Парусники</a><a style="text-decoration:none"> > </a><a>@Model.Name</a>}
else if (Model.MaketCinema == true || Model.MaketDesign == true || Model.MaketMuseum == true)
{<a href="../../../katalog/raznoe">Разное</a><a style="text-decoration:none"> > </a><a>@Model.Name</a>}
    </div>
    <div id="blackScreen" onclick="navigationButton()" class="blackScreen"></div>

    <div class="leftMenu" id="projectDetails">
