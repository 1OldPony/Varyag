                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/lodki/progulochnye-grebnye-lodki">Прогулочные гребные лодки</a></h2>
                        </li>
                    </ul>
                </li>
                <li>
                    <div id="shlupkiNav" class="leftNavLine"><div id="shlupkiOpen" class="leftNavOpen">+</div><div id="shlupkiClose" class="leftNavClose">-</div><h2><a href="../../../katalog/shlyupki">Шлюпки</a></h2></div>
                    <ul id="shlupki-Sub" class="leftSubNavOpen">
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/shlyupki/shlyupki-yal2yal4yal6">Шлюпки ЯЛ2, ЯЛ4, ЯЛ6</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/shlyupki/botiki">Ботики</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/shlyupki/grebnye-katera-i-velboty">Гребные катера и вельботы</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/shlyupki/uchebnye-posobiya">Учебные пособия</a></h2>
                        </li>
                    </ul>
                </li>
                <li>
                    <div id="kateraNav" class="leftNavLine"><div id="kateraOpen" class="leftNavOpen">+</div><div id="kateraClose" class="leftNavClose">-</div><h2><a href="../../../katalog/katera">Катера</a></h2></div>
                    <ul id="katera-Sub" class="leftSubNavOpen">
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/katera/rabochie-i-rybolovnye-katera">Рабочие/Рыболовные катера</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/katera/passazhirskie-katera">Пассажирские катера</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/katera/kayutnye-katera">Каютные катера</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/katera/motoseylery">Мотосейлеры</a></h2>
                        </li>
                    </ul>
                </li>
                <li>
                    <div id="ladiyNav" class="leftNavLine"><div id="ladiyOpen" class="leftNavOpen">+</div><div id="ladiyClose" class="leftNavClose">-</div><h2><a href="../../../katalog/ladi">Ладьи</a></h2></div>
                    <ul id="ladiy-Sub" class="leftSubNavOpen">
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/ladi/parusno-motornye-ladi">Парусно-моторные ладьи</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/ladi/parusno-grebnye-ladi">Парусно-гребные ладьи</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/ladi/strugi-i-galery">Струги и галеры</a></h2>
                        </li>
                    </ul>
                </li>
                <li>
                    <div id="sailboatsNav" class="leftNavLine"><div id="sailboatsOpen" class="leftNavOpen">+</div><div id="sailboatsClose" class="leftNavClose">-</div><a href="../../../katalog/parusniki">Парусники</a></div>
                    <ul id="sailboats-Sub" class="leftSubNavOpen">
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/parusniki/istoricheskie-parusniki">Исторические парусники</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/parusniki/uchebnye-parusniki">Учебные парусники</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/parusniki/shvertboty">Швертботы</a></h2>
                        </li>
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/parusniki/parusnye-yahty">Парусные яхты</a></h2>
                        </li>
                    </ul>
                </li>
                <li>
                    <div id="modelsNav" class="leftNavLine"><div id="modelsOpen" class="leftNavOpen">+</div><div id="modelsClose" class="leftNavClose">-</div><a href="../../../katalog/raznoe">Разное</a></div>
                    <ul id="models-Sub" class="leftSubNavOpen">
                        <li class="leftSubCategory">
                            <h2><a href="../../../katalog/raznoe/modeli-i-makety">Модели и макеты</a></h2>                            
                        </li>
                        <li class="leftSubCategory">
                            <a href="../../../katalog/raznoe/prochaya-produkciya">Прочая продукция</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <partial name="ContactsLeft" />
    </div>

    <div class="projectName"><h1 style="margin-block:0;">@Model.Name</h1></div>
    <div class="projectsDetailsTop">
        <div class="sheme-TTH">
            @if (ViewBag.hideMulka)
            {
                <div class="shemeFlexHidden">
                    <div class="fotorama" data-allowfullscreen="native">
                        <img src="@Url.Action("ProjectImageRender", "Projects", new { id = Model.ProjectID, fot = "shemeFull"})" />
                    </div>
                </div>
            }
            else
            {
                <div class="shemeFlex">
                    <div class="fotorama" data-allowfullscreen="native">
                        <img src="@Url.Action("ProjectImageRender", "Projects", new { id = Model.ProjectID, fot = "shemeFull"})" />
                    </div>
                </div>
            }
            <div class="TTH-detailsFlex">
                <table style="margin-bottom:5px">
                    <tr>
                        <td colspan="3" style="text-align:left"><h4>Характеристики:</h4></td>
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">Длина корпуса наибольшая</td>
                        <td id="shortCharacteristicName" class="characteristic">Длина наибольшая</td>
                        <td class="value">@Model.Length&nbsp;м.</td>
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">Ширина корпуса наибольшая</td>
                        <td id="shortCharacteristicName" class="characteristic">Ширина наибольшая</td>
                        <td class="value">@Model.Windth&nbsp;м.</td>
                    </tr>
                    @if (!Model.BoatRow && !Model.BoatSail && !Model.BoatTraditional && !Model.BoatYal && !Model.Botik && !Model.KaterRow && !Model.MaketStudy)
                    {
                        <tr>
                            <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.Deep)</td>
                            <td id="shortCharacteristicName" class="characteristic">Осадка судна</td>
                            <td class="value">@Model.Deep&nbsp;м.</td>
                        </tr>
                    }
                    @if (@Model.Volume != null)
                    {
                        <tr>
                            <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.Volume)</td>
                            <td id="shortCharacteristicName" class="characteristic">Водоизмещение</td>
                            <td class="value">@Model.Volume&nbsp;т.</td>
                        </tr>
                    }
                    @if (@Model.Mass != null)
                    {
                        <tr>
                            <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.Mass)</td>
                            <td id="shortCharacteristicName" class="characteristic">Вес корпуса</td>
                            <td class="value">@Model.Mass&nbsp;кг.</td>
                        </tr>
                    }
                    @if (@Model.NumberOfOars != null)
                    {
                        <tr>
                            <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.NumberOfOars)</td>
                            <td id="shortCharacteristicName" class="characteristic">Весла</td>
                            <td class="value">@Model.NumberOfOars&nbsp;шт.</td>
                        </tr>
                    }
                    <tr>
                        <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.EnginePower)</td>
                        <td id="shortCharacteristicName" class="characteristic">Мощность двигателя</td>
                        @if (@Model.EnginePower != null)
                        {
                            <td class="value">@Model.EnginePower&nbsp;л.с.</td>
                        }
                        else
                        {
                            <td class="value" style="text-align:center">-</td>
                        }
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.Speed)</td>
                        <td id="shortCharacteristicName" class="characteristic">Скорость (двигатель)</td>
                        @if (@Model.Speed != null)
                        {
                            <td class="value">@Model.Speed&nbsp;узлов</td>
                        }
                        else
                        {
                            <td class="value" style="text-align:center">-</td>
                        }
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.SailArea)</td>
                        <td id="shortCharacteristicName" class="characteristic">Площадь парусности</td>
                        @if (@Model.SailArea != null)
                        {
                            <td class="value">@Model.SailArea&nbsp;м<sup style="font-size:10px;">2</sup></td>
                        }
                        else
                        {
                            <td class="value" style="text-align:center">-</td>
                        }
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.SleepingAreas)</td>
                        <td id="shortCharacteristicName" class="characteristic">Спальные места</td>
                        @if (@Model.SleepingAreas != null)
                        {
                            <td class="value">@Model.SleepingAreas&nbsp;шт.</td>
                        }
                        else
                        {
                            <td class="value" style="text-align:center">-</td>
                        }
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.PassengerCap)</td>
                        <td id="shortCharacteristicName" class="characteristic">Кол-во пассажиров</td>
                        @if (@Model.PassengerCap != null)
                        {
                            <td class="value">@Model.PassengerCap&nbsp;чел.</td>
                        }
                        else
                        {
                            <td class="value" style="text-align:center">-</td>
                        }
                    </tr>
                    <tr>
                        <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.FuelCap)</td>
                        <td id="shortCharacteristicName" class="characteristic">Запас топлива</td>
                        @if (@Model.FuelCap != null)
                        {
                            <td class="value">@Model.FuelCap&nbsp;л.</td>
                        }
                        else
                        {
                            <td class="value" style="text-align:center">-</td>
                        }
                    </tr>
                    @if (@Model.FreshWaterCap != null)
                    {
                        <tr>
                            <td id="details" class="characteristic">@Html.DisplayNameFor(model => model.FreshWaterCap)</td>
                            <td id="shortCharacteristicName" class="characteristic">Запас пресной воды</td>
                            <td class="value">@Model.FreshWaterCap&nbsp;л.</td>
                        </tr>
                    }
                </table>
                @if (@Model.Price != "по запросу")
                {
                    <div class="catalogItemBottom">@Html.DisplayNameFor(model => model.Price): @Model.Price&nbsp;&#8381;</div>
                }
                else
                {
                    <div class="catalogItemBottom">@Html.DisplayNameFor(model => model.Price) @Model.Price</div>
                }
            </div>
        </div>
        <div class="galleryFlex">
            <div class="fotorama" data-nav="thumbs" data-width="100%" data-fit="contain" data-allowfullscreen="native">
                @await Component.InvokeAsync("Fotorama", new { shipProjectId = Model.ProjectID })
            </div>
        </div>
    </div>
    <div style="display:flex;flex-direction:column;padding:10px;">
        <div style="display:flex;justify-content:flex-start;font-size:1.3rem;font-weight:bold;align-items:center;">
            <div class="desc-top" onclick="$('.description').css('display','block'), $('.projectNews').css('display','none'), $('.newsOfProject').css('background-color','#c3e3ff'), $('.desc-top').css('background-color','white')"><div>Описание:</div></div>
            <div class="newsOfProject" onclick="$('.description').css('display','none'), $('.projectNews').css('display','flex'), $('.newsOfProject').css('background-color','white'), $('.desc-top').css('background-color','#c3e3ff')">Новости о проекте</div>
        </div>
        <div class="description">
            @Html.Raw(Model.Description)
        </div>
        <div class="projectNews">
            @await Component.InvokeAsync("ProjectNews", new { projectName = Model.Name })
        </div>
    </div>
</div>
