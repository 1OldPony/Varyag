@model IEnumerable<Varyag.Models.Foto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipProject.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.News.NewsId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FotoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FotoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FotoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
