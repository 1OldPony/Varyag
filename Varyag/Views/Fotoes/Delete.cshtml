@model Varyag.Models.Foto

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Точно удалить?</h3>
<div>
    <h4>Фото</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectFoto)
        </dt>
        <dd class = "col-sm-10">
            <img width="80" height="80" src="@Url.Action("ImageRender", new { id = Model.FotoID})">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShipProject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShipProject.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.News)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.News.NewsId)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FotoID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Projects">Назад</a>
    </form>
</div>
