@model Varyag.Models.ViewModels.FotoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Фото</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Alt" class="control-label"></label>
                <input asp-for="Alt" class="form-control" />
                <span asp-validation-for="Alt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectFoto" class="control-label"></label>
                <input type="file" asp-for="ProjectFoto" class="form-control" />
                <span asp-validation-for="ProjectFoto" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <input name="ShipProjectID" value="@ViewBag.ShipId" />
            </div>
                <div class="form-group" hidden>
                    <input name="NewsID" value="@ViewBag.NewsId" />
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
