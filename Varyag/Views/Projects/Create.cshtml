@model Varyag.Models.Project

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Windth" class="control-label"></label>
                <input asp-for="Windth" class="form-control" />
                <span asp-validation-for="Windth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deep" class="control-label"></label>
                <input asp-for="Deep" class="form-control" />
                <span asp-validation-for="Deep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnginePower" class="control-label"></label>
                <input asp-for="EnginePower" class="form-control" />
                <span asp-validation-for="EnginePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speed" class="control-label"></label>
                <input asp-for="Speed" class="form-control" />
                <span asp-validation-for="Speed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SailArea" class="control-label"></label>
                <input asp-for="SailArea" class="form-control" />
                <span asp-validation-for="SailArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SleepingAreas" class="control-label"></label>
                <input asp-for="SleepingAreas" class="form-control" />
                <span asp-validation-for="SleepingAreas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerCap" class="control-label"></label>
                <input asp-for="PassengerCap" class="form-control" />
                <span asp-validation-for="PassengerCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelCap" class="control-label"></label>
                <input asp-for="FuelCap" class="form-control" />
                <span asp-validation-for="FuelCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FreshWaterCap" class="control-label"></label>
                <input asp-for="FreshWaterCap" class="form-control" />
                <span asp-validation-for="FreshWaterCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="@new  SelectList(Enum.GetValues(typeof(ShipType)))" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CruiseShip" /> @Html.DisplayNameFor(model => model.CruiseShip)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StudyShip" /> @Html.DisplayNameFor(model => model.StudyShip)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FishingShip" /> @Html.DisplayNameFor(model => model.FishingShip)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HistoricalShip" /> @Html.DisplayNameFor(model => model.HistoricalShip)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ReserchShip" /> @Html.DisplayNameFor(model => model.ReserchShip)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PassangerShip" /> @Html.DisplayNameFor(model => model.PassangerShip)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="10" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
